{% set n = (node_parser(node)) %}
{% set client = node_parser(n.field_client.nid) %}
{#{{kint(n.field_articles[0])}} {{die()}}#}
{% set params = get_parameter() %}
{{ attach_library('myadmin/bootstrap_css') }}
<style>
.bg-gin{
  background-color:var(--colorGinToolBarBackground);
}
</style>
<div class="container">
  <section id="invoice">
    <div class="container my-md-5 py-5">

      <div class=" d-md-flex justify-content-between align-items-center  mb-5  ">
        <div class="mt-5 mt-md-0">
          <h2 class="display-6 text-primary fw-bold">Commande </h2>
          <p class="m-0">Reference : {{ n.title }}</p>
        </div>
      </div>

      <div class="bg-gin rounded-5 p-5">
        <div class="d-md-flex justify-content-between">
          <div>
            <p class="text-primary fw-bold">Info client</p>
            <h5>{{ client.title }}</h5>
            <ul class="list-unstyled">
              <li>{{ client.field_phone }}</li>
            </ul>
          </div>
          <div class="text-md-end mt-5">
            <p class="text-primary fw-bold">Info commande</p>
            <h5>Date</h5>
            <ul class="list-unstyled">
              <li><span class="fw-semibold">Date de commande:</span> 20 May, 2024</li>
            </ul>
          </div>
        </div>
      </div>



      <table class="table border my-5">
        <thead>
        <tr class="bg-primary">
          <th scope="col" class="text-white">Description</th>
          <th scope="col" class="text-white">Prix u.</th>
          <th scope="col" class="text-white">Qte</th>
          <th scope="col" class="text-white">Total</th>
        </tr>
        </thead>
        <tbody>
        {% for article in n.field_articles %}
          <tr>
            <td>{{ article.field_article.title }}</td>
            <td>{{ article.field_article.field_prix_unitaire }}</td>
            <td>{{ article.field_quantite }}</td>
            <td>$700.00</td>
          </tr>
        {% endfor %}
        <tr>
          <td></td>
          <td></td>
          <td class="fw-bold">Sub-Total</td>
          <td class="fw-bold">$2,350.00</td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="fw-bold">Discount</td>
          <td class="fw-bold">$470.00</td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="text-primary fs-5 fw-bold">Grand-Total</td>
          <td class="text-primary fs-5 fw-bold">$1,880.00</td>
        </tr>
        </tbody>
      </table>

      <div class="rounded-5 p-5">
        <div class="d-md-flex justify-content-between mt-4">
          <div class="mt-5 mt-md-0">
          <form>
                       <input type="hidden" name="com_id" value=" {{ n.nid }}" />

<button type="submit" class="btn btn-primary">Confimer payement Recues</button>
<button type="submit" class="btn btn-secondary">Annuler le Commande </button>
         </form>
          </div>
          <div class="text-md-end mt-5 mt-md-0">
           
          </div>
        </div>
      </div>

    </div>
  </section>
</div>
